<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Taxi">

    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="279dp"
        android:layout_height="61dp"
        android:layout_marginStart="@dimen/global_horizontal_margin"
        android:layout_marginTop="32dp"
        android:background="#DADAD8D8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setLocation" />

    <TextView
        android:id="@+id/setLocation"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:layout_marginStart="@dimen/global_horizontal_margin"
        android:layout_marginTop="23dp"
        android:text="Set location"
        android:textSize="@dimen/subtitle_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/setLocation2"
        android:layout_width="285dp"
        android:layout_height="37dp"
        android:layout_marginStart="@dimen/global_horizontal_margin"
        android:layout_marginTop="48dp"
        android:text="Taxi numbers in your area:"
        android:textSize="@dimen/subtitle_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar" />

    <ListView
        android:id="@+id/taxiList"
        android:layout_width="370dp"
        android:layout_height="372dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setLocation2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />
</androidx.constraintlayout.widget.ConstraintLayout>