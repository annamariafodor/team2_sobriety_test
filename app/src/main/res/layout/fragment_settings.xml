<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings">

        <TextView
            android:id="@+id/change_email_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_horizontal_margin"
            android:layout_marginEnd="@dimen/global_horizontal_margin"
            android:text="Change Email"
            android:textSize="@dimen/subtitle_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_horizontal_margin"
            android:layout_marginEnd="@dimen/global_horizontal_margin"
            android:layout_marginTop="10dp"
            android:hint="New email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.596"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_email_text" />

        <Button
            android:id="@+id/changeEmailButton"
            android:layout_width="119dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mybutton"
            android:text="Change"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_input" />

        <TextView
            android:id="@+id/change_pass_text"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_horizontal_margin"
            android:layout_marginEnd="@dimen/global_horizontal_margin"
            android:layout_marginTop="70dp"
            android:text="Change Password"
            android:textSize="@dimen/subtitle_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changeEmailButton" />

        <Button
            android:id="@+id/changePaswordButton"
            android:layout_width="119dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mybutton"
            android:text="Change"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.06" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_horizontal_margin"
            android:layout_marginEnd="@dimen/global_horizontal_margin"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="New password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_pass_text" />


        <Button
            android:id="@+id/signOutButton"
            android:layout_width="183dp"
            android:layout_height="47dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/mybutton2"
            android:text="Sign Out"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changePaswordButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>